/* OP PageHeader */

.PageHeader {
  display: flex;
  padding-bottom: var(--stack-padding-condensed);
  margin-bottom: var(--stack-gap-normal);
  border-bottom: var(--borderWidth-thin) solid var(--borderColor-muted);
  flex-flow: column;

  @media (max-width: 767.98px) {
    border-bottom: 0;
  }
}

.PageHeader-titleBar {
  display: flex;
  flex-flow: row;
  justify-content: flex-end;
  align-items: center; /* Keep back button vertically aligned. */
}

.PageHeader-title {
  font-size: 24px;
  font-weight: var(--base-text-weight-normal);
  flex: 1 1 auto;
}

.PageHeader-title--large {
  font-size: var(--text-title-size-large);
}

/* One-liner of supporting text */
.PageHeader-description {
  font-size: var(--text-body-size-medium);
  color: var(--fgColor-muted);
  flex: 1 100%;
}

/* Add 1 or 2 buttons to the right of the heading */
.PageHeader-actions {
  margin: var(--base-size-4) 0 var(--base-size-4) var(--base-size-4);
  justify-content: flex-end;

  & + .PageHeader-description {
    margin-top: var(--base-size-4);
  }
}

.PageHeader-breadcrumbs {
  display: block;
  width: 100%;
  margin-bottom: var(--base-size-8);
}

.PageHeader-backButton {
  margin-top: 2px; /* to center align with label */
  margin-right: var(--base-size-4);
}
