<%= render(Primer::OpenProject::Table::Header.new(**@system_arguments)) do %>
  <%=
    render(
      Primer::Beta::BaseButton.new(
        classes: "ButtonReset TableSortButton",
        data: { action: "click:data-table#toggleSort" }
      )
    ) do
  %>
    <%= content %>
    <%=
      render(
        Primer::Beta::Octicon.new(
          icon: :"sort-asc",
          classes: ["TableSortIcon", "TableSortIcon--ascending", { "d-none": !@direction.in?(%i[NONE ASC]) }]
        )
      )
    %>
    <%=
      render(
        Primer::Beta::Octicon.new(
          icon: :"sort-desc",
          classes: ["TableSortIcon", "TableSortIcon--descending", { "d-none": !@direction.in?([:DESC]) }]
        )
      )
    %>
  <% end %>
<% end %>
